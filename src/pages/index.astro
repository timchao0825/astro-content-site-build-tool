---
import { Image } from 'astro:assets'
import Layout from '../layouts/layout.astro'
import Header from '../layouts/header.astro'
import Footer from '../layouts/footer.astro'
import cubeImage from '../assets/images/cube.jpg'
const response = await fetch('https://jsonplaceholder.typicode.com/todos/2')
const data = await response.json()
---

<Layout title="Test test">
  <Header />
  <div class="wrap">
    <h1 class="ml-6 text-brown">test 123 213</h1>

    <svg xmlns="http://www.w3.org/2000/svg" width="1440" height="120" viewBox="0 0 1440 120" fill="none">
      <path d="M0 6.10352e-05L1440 6.10352e-05L0 120L0 6.10352e-05Z" fill="white"></path>
    </svg>
    <Image class="mb-4" src={cubeImage} alt="descriptive text" />

    <div class="api-block">
      api response
      <p>{data.userId}</p>
      <p>{data.id}</p>
      <p>{data.title}</p>
    </div>
  </div>
  <Footer />
</Layout>

<script src="../js/index.js"></script>
<script>
  console.log('index page init')
</script>

<style lang="scss">
  .wrap {
    background-color: var(--main-color);

    .api-block {
      border: 2px solid green;
    }

    h1 {
      position: relative;
      border: 2px solid red;

      @include media-breakpoint-down(lg) {
        border: 2px solid green;
      }
    }
  }
</style>
